<div class='table-responsive'>
  <table class='table table-striped table-bordered table-hover'>
    <thead>
      <tr>
        <th class='text-center'>ファイル名</th>
        <th class='text-center'>備考</th>
        <th class='text-center' style='width: 60px;'>編集</th>
        <th class='text-center' style='width: 60px;'>削除</th>
      </tr>
    </thead>

    <% resources.each do |resource| %>
      <tbody>
        <tr>
          <td>
            <%= link_to resource do %>
              <i class="glyphicon <%= display_icon_status(resource) %>"></i>
              <%= resource.name %>
            <% end %>
          </td>

          <td><%= resource.description %></td>

          <td class='text-center'>
            <% if edit_permission_exist?(resource) %>
              <a href="<%= change_instance_redirect(resource) %>"
                data-remote='true'
                data-toggle="tooltip" data-placement="top"
                title='編集するにはクリックしてください'>
                <i style='font-size: 18px;' class='glyphicon glyphicon-edit'></i>
              </a>
              <div id='folder-modal' class='modal fade' tabindex='-1' role='dialog' aria-hidden='true'></div>
              <div id='room-modal' class='modal fade' tabindex='-1' role='dialog' aria-hidden='true'></div>
            <% end %>
          </td>

          <td class='text-center'>
            <% if edit_permission_exist?(resource) %>
              <%= link_to resource, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i style='font-size: 18px; color: #EC5800;' class='glyphicon glyphicon-trash'></i>
              <% end %>
            <% end %>
          </td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>
