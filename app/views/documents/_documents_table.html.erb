<div class='table-responsive'>
  <table class='table table-striped table-bordered table-hover' id="feed">
    <thead>
      <tr>
        <th class='text-center'>ファイル名</th>
        <th class='text-center'>備考</th>
        <th class='text-center' style='width: 60px;'>編集</th>
        <th class='text-center' style='width: 60px;'>削除</th>
      </tr>
    </thead>
    <%= render partial: 'documents/document_table_body', locals: { resource: @resource, documents: @documents } %>

    <div class="infinite-scroll">
      <%= will_paginate @documents %>
    </div>
  </table>
</div>
