<script>
  $(function () {
    var ua = navigator.userAgent;
    if (ua.indexOf('iPhone') > 0  ||
        ua.indexOf('Android') > 0 && ua.indexOf('Mobile') > 0 ||
        (ua.indexOf('iPad') > 0   || ua.indexOf('Android') > 0)) {
      $('[data-toggle="tooltip"]').tooltip('hide')
    } else {
      $('[data-toggle="tooltip"]').tooltip()
    }
  })
</script>
