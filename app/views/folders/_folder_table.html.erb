<div class='table-responsive'>
  <table class='table table-striped table-bordered table-hover'>
    <thead>
      <tr>
        <th class='text-center'>ファイル名</th>
        <th class='text-center'>備考</th>
        <th class='text-center'>編集</th>
      </tr>
    </thead>

    <% resources.each do |folder| %>
      <tbody>
        <tr>
          <td>
            <%= link_to folder do %>
              <i class='glyphicon glyphicon-folder-close'></i>
              <%= folder.name %>
            <% end %>
          </td>
          <td><%= folder.description %></td>
          <td class='text-center' style='width: 60px;'>
            <a href="<%= edit_folder_path(folder) %>"
              data-remote='true'
              data-toggle="tooltip" data-placement="top"
              title='編集するにはクリックしてください'>
              <i style='font-size: 18px;' class='glyphicon glyphicon-edit'></i>
            </a>
            <div id='folder-modal' class='modal fade' tabindex='-1' role='dialog' aria-hidden='true'></div>
          </td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>
